{
    "name": "jdecode/x-web",
    "type": "project",
    "description": "Web-dev boilerplate for 10x developers",
    "keywords": ["boilerplate", "laravel", "x-web"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "doctrine/dbal": "*",
        "guzzlehttp/guzzle": "^7.5",
        "laravel/breeze": "^1.20",
        "laravel/framework": "^10.5.1",
        "laravel/sanctum": "^3.2.1",
        "laravel/socialite": "^5.6",
        "laravel/telescope": "*",
        "laravel/tinker": "^2.8.1",
        "livewire/livewire": "^2.12"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.13",
        "brainmaestro/composer-git-hooks": "dev-master",
        "enlightn/security-checker": "^1.10",
        "fakerphp/faker": "^1.21.0",
        "laravel/pint": "^1.7",
        "laravel/sail": "^1.21.3",
        "mockery/mockery": "^1.5.1",
        "nunomaduro/collision": "^7.4",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpmd/phpmd": "^2.13",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "dev": [
            "@post-root-package-install",
            "@putenv CACHE_DRIVER=file",
            "@post-create-project-cmd",
            "@php artisan migrate",
            "chmod -R 777 storage bootstrap",
            "@cghooks",
            "@ide-helper"
        ],
        "cghooks": "[ -f vendor/bin/cghooks ] && vendor/bin/cghooks update || echo 'cghooks not found'",
        "ide-helper": [
            "@php artisan ide-helper:generate -n",
            "@php artisan ide-helper:meta -n",
            "@php artisan ide-helper:models -n"
        ],
        "phpmd": "vendor/bin/phpmd app text phpmd_ruleset.xml",
        "security-checker": "vendor/bin/security-checker security:check",
        "pint": "vendor/bin/pint app tests",
        "pest": "vendor/bin/pest --stop-on-error --stop-on-failure --parallel --compact",
        "pester": "vendor/bin/pest --stop-on-error --stop-on-failure --parallel --compact --coverage --min=80",
        "pre-commit": [
            "@pint",
            "@phpmd",
            "@security-checker"
        ],
        "pre-push": [
            "@pest"
        ],
        "post-merge": [
            "@php artisan migrate",
            "composer install",
            "echo \"\nSeed, if in need: \\e[32mphp artisan db:seed\\e[0m\"\n"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "hooks": {
            "config": {
                "stop-on-failure": [
                    "pre-commit",
                    "pre-push"
                ]
            },
            "pre-commit": [
                "docker-compose exec -T x-web composer run pre-commit"
            ],
            "pre-push": [
                "docker-compose exec -T x-web composer run pre-push"
            ],
            "post-merge": [
                "docker-compose exec -T x-web composer run post-merge"
            ]
        }

    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
